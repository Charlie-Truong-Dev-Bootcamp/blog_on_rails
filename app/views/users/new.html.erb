<h3>Please register with us to create a username and password</h3>
<div class = "form">

  <%= form_for @user, url: create_user_path do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
    <%= f.label :email, "Email" %>
    <%= f.email_field :email %>
    <%= f.label :username, "Username" %>
    <%= f.text_field :username %>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>
    <%= f.submit "Sign-up" %>
  <% end %>
</div>